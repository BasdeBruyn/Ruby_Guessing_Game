<div class="mx-auto mt-5 w-25">
  <h1 class="text-center mb-3">Guessing game</h1>
  <%= form_for :guess, :html => { :class => 'form-inline', :method => 'get' }, url: guess_game_path do |guess| %>
      <%= guess.label :name %>
      <%= guess.text_field(:name, {:class => 'from-control ml-2'}) %>
      <%= guess.submit('start', { :class => 'btn btn-primary ml-2' }) %>
  <% end %>
</div>